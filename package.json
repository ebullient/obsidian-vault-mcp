{
  "name": "obsidian-vault-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "Expose Obsidian vault as an MCP server via HTTP for external LLM tools",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "fix": "npx @biomejs/biome check --write ./src",
    "format": "npx @biomejs/biome format ./src",
    "lint": "npx @biomejs/biome lint ./src",
    "prebuild": "npx @biomejs/biome check ./src",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build && chmod +x build/mcp-bridge.js",
    "preversion": "npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin",
    "mcp",
    "model-context-protocol"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-vault-mcp",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^24.3.1",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.25.9",
    "moment": "^2.30.1",
    "obsidian": "^1.8.7",
    "tslib": "^2.8.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "fastify": "^5.2.0",
    "@fastify/cors": "^10.0.1"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*"
  }
}
